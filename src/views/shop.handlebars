<header class="header">
    <nav>
        <ul class="menu">
            <li>
                <a href="/">Shop</a>
            </li>
            <li>
                <a href="/admin/add-product">Add Product</a>
            </li>
        </ul>
    </nav>
</header>

<main class="content">

    <h1>My Products</h1>

    {{#if hasProducts }}
        {{#each prods}}
            <article class="card">
                <h3 class="card__title">{{this.title}}</h3>
                <img
                    src="https://picsum.photos/300/175"
                    alt="Shop Item Logo Image"
                    class="card__img"
                />
                <p class="card__desc">A very interesting book about so many even more interesting things!</p>
                <button class="card__button">Add To Cart</button>
            </article>
        {{/each}}

        {{else}}
            <h1>No Products Found!</h1>
    {{/if}}

</main>
