<%- include('../includes/head'); %>
    <body>

        <%- include('../includes/navigation'); %>

        <main class="cart">
            <h1><%= pageTitle %></h1> 

            <% if (hasProducts) { %>
                <div>
                    <ul class="cartModal">
                        <li>
                            <p>Name</p>
                            <p>Quantity</p>
                            <p>Cost</p>
                        </li>
                        <%  products.forEach((product) => {    %>
                            <li>
                                <p><%= product.title %></p>
                                <p><%= product.quantity %></p>
                                <p><%= product.price %></p>
                            </li>
                        <%  }); %>
                    </ul>
                    <p>Total Price : Â£<%= totalPrice %></p>
                </div>
            <% }else{ %>
                <h2>Your cart is empty</h2>
            <% } %>
        </main>

    </body>
<%- include('../includes/end'); %>